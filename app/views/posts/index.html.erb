<h1>Picturegram</h1>
<div class="post-wrapper row">
	<% @posts.each do |post| %>
		<div class="post">
			<div class="post-head">
				<div class="name">Craig Olson</div>
			</div>
			<div class="image center-block">
				<%= link_to image_tag(post.image.url(:medium), :class => 'img-responsive'), post_path(post) %>
			</div>
			<p><%= post.caption %></p>
		</div>
	<% end %>
</div>


<%= link_to "New Post", new_post_path %>